        <section id="product-wrapper">
            <div class="wrapper">
                <div class="container">
                    <div itemscope="" itemtype="">
                        <div class="row">

                            <div class="col-lg-5">

                                <div class="customize-product-slider clearfix">
                                    <div id="surround" class="clearfix">
                                        <div class="product-images" id="ProductPhoto">
                                            <a href="@Url.Content("~/img/" + @Model.HINHANH)">
