<div id="PageContainer" class="is-moved-by-drawer" style="border-color:dimgray">
    <main class="main-content" role="main">
        <section id="page-wrapper">
            <div class="wrapper">
                <div class="inner">
                    <div class="grid">
                        <div class="grid__item large--one-third push--large--one-third text-center">
                            <h1 style="font-size:30px;" align="center">Đăng ký tài khoản mới</h1>
                            <div class="form-vertical">
                                <form accept-charset="UTF-8" method="post">
                                    @using (Html.BeginForm("dangky", "User", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                </div>
                                                @if (@ViewBag.Success != null)
                                                {
                                                    <div class="alert alert-success">@ViewBag.Success = "Đăng ký thành công";</div>
                                                }
                                            </div>
                                            <div class="form-group" style="text-align:left;">

                                                @Html.LabelFor(model => model.tendn, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.tendn, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">

                                                    <input class="input-full" data-val="true" data-val-required=" Tên đang nhập không được để trống. " htmlattributes="{ class = form-control }" id="tendn" name="tendn" type="text" value="" placeholder="Nhập tên đăng nhập">

                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.matkhau, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">

                                                    <input class="input-full" data-val="true" data-val-length="Độ dài mật khẩu ít nhất 6 ký tự. " data-val-length-max="20" data-val-length-min="6" data-val-required=" mật khẩu không được để trống. " htmlattributes="{ class = form-control }" id="matkhau" name="matkhau" type="password" placeholder="Nhập mật khẩu">

                                                </div>

                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.xacnhanmatkhau, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.xacnhanmatkhau, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">
                                                    <input class="input-full" data-val="true" data-val-equalto=" Xác nhận mật khẩu không đúng. " data-val-equalto-other="*.matkhau" htmlattributes="{ class = form-control }" id="xacnhanmatkhau" name="xacnhanmatkhau" type="password" placeholder="Nhập lại mật khẩu">

                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.hoten, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">
                                                    <input class="input-full" data-val="true" data-val-length="Họ tên không hợp lệ" data-val-length-max="20" data-val-length-min="1" data-val-required=" Họ tên không được để trống. " htmlattributes="{ class = form-control }" id="hoten" name="hoten" type="text" value="" placeholder="Nhập họ tên">
                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.dienthoai, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.dienthoai, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">
                                                    <input class="input-validation-error input-full" data-val="true" data-val-length="Số điện thoại không hợp lệ" data-val-length-max="11" data-val-length-min="9" data-val-required=" Số điện thoại không được để trống. " htmlattributes="{ class = form-control }" id="dienthoai" name="dienthoai" type="text" onkeypress="return isNumberKey(event)" placeholder="Nhập số điện thoại">
                                                </div>
                                            </div>

                                            <div class="form-group" style="text-align:left">
                                                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">
                                                    <input class="input-validation-error input-full" data-val="true" data-val-required=" Email không được để trống. " htmlattributes="{ class = form-control }" id="email" name="email" type="email" placeholder="Nhập email">

                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.hinhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.hinhanh, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">
                                                    <input class="input-full" htmlattributes="{ class = form-control }" id="hinhanh" type="file" name="hinhanh" accept="image/jpeg,image/jpg,image/png" value="">
                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.ngaysinh, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.ngaysinh, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-10">

                                                    <input class="input-full" htmlattributes="{ class = form-control }" id="ngaysinh" name="ngaysinh" type="date">

                                                </div>
                                            </div>

                                            <div class="form-group input-full" style="text-align:left">
                                                @Html.LabelFor(model => model.diachi, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div style="color:red;font-size:small;text-align:initial">
                                                    @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="col-md-10">
                                                    <textarea class="input-full" cols="20" htmlattributes="{ class = form-control }" id="diachi" name="diachi" rows="2" placeholder="Nhập địa chỉ"></textarea>

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Đăng Ký" class="btn btn--full" />
                                                    <p><a href="@Url.Action("dangnhap","User")">Trở về trang đăng nhập</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </section>

    </main>
</div>
